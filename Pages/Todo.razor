@page "/todo"

<div class="mb-5" style="display: flex; justify-content: space-between; width: 100%; min-height : 200px; border-radius: 15px; box-shadow: 2px 2px 40px rgba(0,0,0,.25);">
    <div class="div" style="width:100px; min-height: 100px; border-radius: 15px; box-shadow: 2px 2px 40px rgba(0,0,0,.25);"></div>
</div>


<h3>Todos Remaining -> (@todos.Count(todo => !todo.IsDone))</h3>
<ul>
    @foreach (var todo in todos)
    {
        <input type="checkbox" @bind="todo.IsDone" />
        <input class="bg-dark w-100" @bind="todo.Title" />
    }
</ul>
<div class="bg-dark p-5">
<input placeholder="Something todo" @bind="newTodo" class="form-control"  />
<button @onclick="AddTodo" class="btn btn-light mt-3 w-100">Add todo</button>
</div>


@code {
    private IList<TodoItem> todos = new List<TodoItem>();
    private string newTodo;
    private void AddTodo()
    {
        if (!string.IsNullOrWhiteSpace(newTodo))
        {
            todos.Add(new TodoItem { Title = newTodo });
            newTodo = string.Empty;
        }
    }
}